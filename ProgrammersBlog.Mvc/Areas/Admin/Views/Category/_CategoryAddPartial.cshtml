@model ProgrammersBlog.Entities.Dtos.CategoryAddDto


<div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><span class="fas fa-plus"></span> Kategory Ekle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form action="Add" id="form-category-add">
           <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
           <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;"></div>
           <div class="form-group">
               <label asp-for="Name">Kategori Adı</label>
               <input class="form-control" asp-for="Name"/>
               <span class="text-danger" asp-validation-for="Name"></span>
           </div>
            <div class="form-group">
               <label asp-for="Description">Kategori Açıklaması</label>
               <input class="form-control" asp-for="Description"/>
               <span class="text-danger" asp-validation-for="Description"></span>
           </div>
           <div class="form-group">
               <label asp-for="Note">Kategori Not Bilgisi</label>
               <input class="form-control" asp-for="Note"/>
               <span class="text-danger" asp-validation-for="Note"></span>
           </div>
            <div class="form-group form-check">
               <input type="checkbox" class="form-check-input" asp-for="IsActive"/>
               <label class="form-check-label" asp-for="IsActive">Aktif Mi?</label>
               <span class="text-danger" asp-validation-for="IsActive"></span>
           </div>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-block" id="btn-save"><span class="fas fa-save"></span> Kaydet</button>
        <button type="button" class="btn btn-danger btn-block" id="btn-cancel" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
      </div>
    </div>
  </div>
</div>