@model ProgrammersBlog.Entities.Dtos.UserUpdateDto

<div class="modal fade" id="updateUserModal" tabindex="-1" role="dialog" aria-labelledby="updateUserModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><span class="fas fa-edit"></span> Kullanıcı Düzenle</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="İptal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <form asp-action="Update" id="form-user-update" asp-controller="User" >
           <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()"/>
           <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;"></div>
           <input asp-for="Id" type="hidden"/>
           <div class="form-group">
               <label asp-for="UserName">Kullanıcı Adı</label>
               <input class="form-control" asp-for="UserName" placeholder="Lütfen kullanıcı adı giriniz."/>
               <span class="text-danger" asp-validation-for="UserName"></span>
           </div>
            <div class="form-group">
               <label asp-for="Email">E-Posta Adresi</label>
               <input class="form-control" asp-for="Email" placeholder="Lütfen e-posta adresi giriniz."/>
               <span class="text-danger" asp-validation-for="Email"></span>
           </div>
            <div class="form-group">
               <label asp-for="PhoneNumber">Telefon Numarası</label>
               <input class="form-control" asp-for="PhoneNumber" placeholder="Lütfen telefon numarası giriniz."/>
               <span class="text-danger" asp-validation-for="PhoneNumber"></span>
           </div>
           <div class="form-group">
               <label asp-for="Picture"></label>
               <input asp-for="Picture" type="Hidden"/>
               <img class="img-fluid img-thumbnail my--image" src="~/img/@Model.Picture" alt="@Model.UserName"/>
           </div>
           <div class="form-group">
               <label asp-for="PictureFile"></label>
               <input class="form-control-file" type="file" accept="image/*" asp-for="PictureFile"/>
     
           </div>
       </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary btn-block" id="btnUpdate"><span class="fas fa-save"></span> Düzenle</button>
        <button type="button" class="btn btn-danger btn-block" id="btn-cancel" data-dismiss="modal"><span class="fas fa-times"></span> İptal</button>
      </div>
    </div>
  </div>
</div>